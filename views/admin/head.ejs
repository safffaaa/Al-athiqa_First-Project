        <div class="row">

            <!-- Left Nav -->

            <div class="col-2" style="position: fixed; top: 10;">
                <ul class="nav flex-column" id="sidebar">
                    <li class="nav-item">
                        <a href="/dashboard" class="list-group-item custom-list-item">
